{
  "name": "dots-and-boxes",
  "version": "0.0.0.0.1",
  "private": true,
  "scripts": {
    "start": "npm run serve",
    "debug": "npm run build && npm run watch-debug",
    "build": "npm run build-ts",
    "serve": "node dist/server.js",
    "test": "jest --forceExit --coverage --verbose",
    "watch-test": "npm run test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "serve-debug": "node dist/server.js DEBUG",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "dependencies": {
    "body-parser": "~1.18.3",
    "cookie-parser": "^1.4.4",
    "debug": "~4.1.1",
    "express": "~4.16.4",
    "mariadb": "^2.2.0",
    "morgan": "~1.9.1",
    "sequelize": "^5.21.4",
    "sqlite3": "^4.1.1"
  },
  "devDependencies": {
    "@types/node": "^13.9.0",
    "concurrently": "^5.0.0",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.8.3"
  }
}
